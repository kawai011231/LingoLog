<% provide(:title, 'Login') %>
<div class="container mt-5">
  <h1 class="mb-4">Login</h1>

  <%= form_with(scope: :session, url: login_path, local: true, class: "needs-validation", novalidate: "") do |form| %>
    <div class="mb-3">
      <%= form.label :username, class: 'form-label' %>
      <%= form.text_field :username, class: 'form-control', placeholder: "Username" %>
    </div>

    <div class="mb-3">
      <%= form.label :password, class: 'form-label' %>
      <%= form.password_field :password, class: 'form-control', placeholder: "Password" %>
    </div>

    <%= form.submit "Login", class: "btn btn-primary" %>
  <% end %>

  <div class="mt-3">
    <%= link_to 'New user? Sign up', signup_path, class: 'btn btn-secondary' %>
  </div>
</div>
