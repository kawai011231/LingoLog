<%= form_with(model: @diary, url: update_diary_by_date_path(date: @diary.date), local: true, class: "needs-validation", novalidate: "") do |form| %>
  <div class="mb-3">
    <%= form.label :title, class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :content, class: 'form-label' %>
    <%= form.text_area :content, class: 'form-control', rows: 5 %>
  </div>

  <div class="btn-group" role="group">
    <%= link_to t('diaries.edit.button1'), diary_by_date_path(date: @diary.date), class: 'btn btn-secondary' %>
    <%= form.submit t('diaries.edit.button2'), class: "btn btn-primary" %>
  </div>
<% end %>
